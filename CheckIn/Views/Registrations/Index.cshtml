@model IEnumerable<CheckIn.Models.Registration>

@{
    ViewData["Title"] = "Index";
}

<h1 >Entradas/Salidas</h1>

<div class="text-center">
    <div class="container-clock">
        <h1 id="time">00:00:00</h1>
        <p id="date">date</p>
    </div>
</div>

<div>
    <form asp-controller="Registrations" asp-action="Index">
        <label class="date-label">
            Fecha inicial:
        </label>
        <input class="dates" type="date" name="startDate" />
        <label class="date-label">
            Fecha final:
        </label>
        <input class="dates" type="date" name="endDate"  />
        <input class="btn-search" type="submit" value="Buscar" />
    </form>
</div>

<br />
<table class="table table-striped">
    <thead>
        <tr class="row-color">
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exit)
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger text-white" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="text-center">
    <a asp-action="Input" class="btn btn-search text-white">Entrada/Salida</a>
</div>
