@model CheckIn.Models.Registration

@{
    ViewData["Title"] = "Input";
}

<h1>Entrada/Salida</h1>

<h4>Registrar entrada/salida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Input">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input  asp-for="EmployeeId" class="control-label" type="number" />
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn-search" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: darkblue;">Regresar al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}